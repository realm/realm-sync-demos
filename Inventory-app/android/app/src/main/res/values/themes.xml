<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="text_style_normal_very_small_title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_style_bold_very_small_title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style_normal_small_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="text_style_bold_small_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_style_bold_medium_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style_bold_large_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style_normal_large_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_style_bold_large_toolbar_title">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style_bold_large_white_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="background_white_Button">
       <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="background_create_job_Button">
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/color_createJob_screen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style_bold_small_white_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_style_bold_very_small_white_title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="editText_style_bold_small_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ems">10</item>
    </style>

    <style name="dialog_center" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="outlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:padding">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:editTextColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>